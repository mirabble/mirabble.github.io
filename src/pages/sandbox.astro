      }
      .center1 {
        position: absolute;
        left: 50%;
        transform: translate(-50%);
      }

      .container2 {
        display: flex;
      }
      .item12 {
        background-color: cyan;
        padding: 3px;
      }
      .item22 {
        background-color: purple;
        padding: 3px;
      }
      .container2:hover .item12 {
        background-color: red;
      }

      .container3 {
        background-color: darkgreen;
        padding: 10px;
      }
      .son3 {
        background-color: red;
        padding: 10px;
      }
      .grandson3 {
        background-color: aqua;
        padding: 10px;
      }

      .container3:hover .grandson3 {
        background-color: orange;
      }
